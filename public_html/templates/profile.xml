<fest:template xmlns:fest="http://fest.mail.ru">

<div class="wrapper">

  <form name="register-form" class="form" data-action="/profile" method="POST">
   
    <div class="form__header">
      <h1 class="form__header__h1">Profile</h1>
      <span class="form__header__span">Change your password</span>
    </div>

    <div class="form__content">
      <!--Current PASSWORD-->
      <div class="alert-error cur-passw-error"></div>
      <div class="alert-success"></div>
      
      <label for="cur-passw" class="form__content__label">Current password:</label>
      <input name="cur_passw" type="password" class="form__content__input"/>

      <!--NEW PASSWORD-->
      <div class="alert-error passw-error"></div>
      
      <label for="passw" class="form__content__label">New password:</label>
      <input name="passw" type="password" class="form__content__input"/>

      <!--CONFIRM PASSWORD-->
      <div class="alert-error confirm-passw-error"></div>
      
      <label for="passw" class="form__content__label">Confirm password:</label>
      <input name="confirm_passw" type="password" class="form__content__input" />
    
    </div>

    <div class="form__footer">
      <!--LOGIN-->
      <input type="submit" name="submit" class="form__footer__button" value="Save"/>
      <!--BACK-->
      <a href="#" class="form__footer__button form__footer__button_orange">Back</a>
    </div>
    
  </form>

</div>

<div class="gradient"></div> 

</fest:template>