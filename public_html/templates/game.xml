<fest:template xmlns:fest="http://fest.mail.ru">



    <div class="gamepage__header">
        <div class="gamepage__header__infobar">
        </div>
        <a href="#" class="gamepage__menu__infobar__menu-btn">Quit</a>
    </div>

    <div class="gamepage__body">
        
        <div class="gamepage__body__gameheader">
            <div class="gamepage__body__gameheader myName"></div>
            <div class="gamepage__body__gameheader myScore"></div>
            <div class="gamepage__body__gameheader enemyName"></div>
            <div class="gamepage__body__gameheader enemyScore"></div>
        </div><!---->
        <div class="gamepage__body__battlefield">
            <div class="gamepage__body__battlefield wait" id="wait">Ожидайте игрока</div>
            <div class="gamepage__body__battlefield gameplay" id="gameplay">Игра
                <canvas id="myCanvas"></canvas>

            </div>
            <div class="gamepage__body__battlefield over" id="gameOver">Игра окончена
                <p id="win"></p>
            </div>
        </div>
        <div class="gamepage__body__gamefooter">

            <div class="gamepage__body__gamefooter__actionpanel"></div>
            <div class="gamepage__body__gamefooter__scorespanel"></div>
        </div>

    </div>

    <div class="gamepage__footer">
        <div class="gamepage__footer__controlbar-status">
            <!--информация в футере - пока не ясно, что здесь будет-->
        </div>
    </div>

</fest:template>
